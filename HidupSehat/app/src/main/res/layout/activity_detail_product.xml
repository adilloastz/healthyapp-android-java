<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailProductActivity">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:background="@color/ijo">

     <ImageButton
         android:id="@+id/back"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="10dp"
         android:background="#00FFFFFF"
         android:src="@drawable/kembali_putih" />

     <ImageButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/keranjangbtn"
         android:layout_alignStart="@+id/back"
         android:layout_marginStart="364dp"
         android:src="@drawable/baseline_shopping_bag_24" />

 </RelativeLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:id="@+id/detailImage"
        android:padding="9dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:src="@drawable/uplot_img"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/detailNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"
            android:text="Mangga Juara"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/detailharga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="26dp"
            android:text="Rp. 16000 /kg"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/terjual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="27dp"
            android:text="Terjual 889"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/add_fav"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="52dp"
            android:background="#00FFFFFF"
            android:src="@drawable/favorite" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="lorem ipsum iguosadghoaghdahdiapdaidhaidhihdioahdiadhaidhahdoauidihdahdaidhaihdaidhadha"
        android:id="@+id/detailDesc"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Masukan ke keranjang"
        android:textSize="16sp"
        android:id="@+id/add_bag"
        android:gravity="center"
        android:backgroundTint="@color/ijo"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        app:cornerRadius = "20dp"
        />
    </RelativeLayout>



</LinearLayout>